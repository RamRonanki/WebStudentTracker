<Context>

  <Resource name="jdbc/{db name}" 
  			auth="Container" type="javax.sql.DataSource"
               maxActive="20" maxIdle="5" maxWait="10000"
               username="{name}" password="{somepassword}" 
               driverClassName="com.mysql.cj.jdbc.Driver"
               url="jdbc:mysql://localhost:3306/{db name?useSSL=false&amp;allowPublicKeyRetrieval=true"/>

</Context>